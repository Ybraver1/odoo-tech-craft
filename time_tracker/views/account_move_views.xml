<odoo>
    <data>
        <record id="view_move_form_inherit_wise" model="ir.ui.view">
            <field name="name">account.move.form.wise.payment</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="open_wise_wizard" type="object" string="Pay with Wise"
                        class="btn-primary"
                        invisible="move_type != 'in_invoice' or state != 'posted'"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>