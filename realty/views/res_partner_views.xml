<odoo>
    <data>
        <record id="realty.res_partner" model="ir.ui.view">
            <field name="name">realty.res.partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <div name="button_box" position='inside'>
                    <button name="action_view_properties"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-list">
                        <field string="Properties" name="property_count" widget="statinfo" />
                    </button>
                    <button name="action_view_showings"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-list">
                        <field string="Showings" name="showing_count" widget="statinfo" />
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>