<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="realty.property_list">
      <field name="name">realty.property.list</field>
      <field name="model">realty.property</field>
      <field name="arch" type="xml">
        <list>
          <field name="name" />
          <field name="type" />
          <field name="owner_id" />
          <field name="stage_id" />
          <field name="price" />
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="realty.property_form">
      <field name="name">realty.property.form</field>
      <field name="model">realty.property</field>
      <field name="arch" type="xml">
        <form>
          <div class="oe_button_box" name="button_box">
            <button name="action_view_showings"
              type="object"
              class="oe_stat_button"
              icon="fa-list">
              <field string="Showings" name="showing_count" widget="statinfo" />
            </button>
          </div>
          <header>
            <field name="stage_id" widget="statusbar" />
          </header>
          <group>
            <field name="name" />
            <field name="type" />
            <field name="owner_id" />            
            <field name="price" />
            <field name="description" />
          </group>

          <notebook>
            <page string="Images">
              <field name="image_ids" mode="kanban" context="{'default_property_id': id}">
                <kanban>
                  <templates>
                    <t t-name="kanban-box">
                      <div class="oe_kanban_global_click">
                        <field name="image" widget="image" />
                      </div>
                    </t>
                  </templates>
                </kanban>
              </field>
            </page>
          </notebook>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="realty.property_kanban">
      <field name="name">realty.property.kanban</field>
      <field name="model">realty.property</field>
      <field name="arch" type="xml">
        <kanban class="o_kanban_example" default_group_by="stage_id">
          <!-- Needed for drag-and-drop stages -->
          <field name="stage_id" />

          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <strong>
                  <field name="name" />
                </strong><br /> Type: <field name="type" /><br />
                Owner: <field name="owner_id" /><br /> Stage: <field name="stage_id" /><br /> Price: <field
                  name="price" widget="monetary" options="{'currency_field': 'currency_id'}" />
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>


